<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyphermessenger" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.cyphermessenger.LoginActivity"
            android:label="@string/login_activity_name" >
        </activity>
        <activity
            android:name="com.cyphermessenger.RegistrationActivity"
            android:label="@string/registration_activity_name" >
        </activity>
        <activity
            android:name="com.cyphermessenger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cyphermessenger.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="com.cyphermessenger.ConversationsActivity"
            android:label="@string/title_activity_conversations" >
        </activity>
    </application>

</manifest>
