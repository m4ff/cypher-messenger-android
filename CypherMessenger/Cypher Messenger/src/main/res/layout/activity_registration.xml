<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.cyphermessenger.RegistrationActivity">


    <TextView
        android:id="@+id/name_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="@string/prompt_name" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FormElementPadding" />


    <TextView
        android:id="@+id/password_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="@string/prompt_password" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        style="@style/FormElementPadding" />

    <TextView
        android:id="@+id/confirmation_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="@string/prompt_confirmation" />

    <EditText
        android:id="@+id/confirm_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        style="@style/FormElementPadding" />

    <ImageView
        android:id="@+id/captcha_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/FormElementPadding" />

    <TextView
        android:id="@+id/captcha_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="@string/prompt_captcha_text" />

    <EditText
        android:id="@+id/captcha_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FormElementPadding" />

</LinearLayout>
